<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.botduo.nearbyatm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
    <!--  IMEI ID를 얻기 위한 권한 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- GCM을 사용하기 위한 코드 시작 -->
    <!-- GCM connects to Google Services. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- GCM requires a Google account. -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!--
     Creates a custom permission so only this app can receive its messages.

     NOTE: the permission *must* be called PACKAGE.permission.C2D_MESSAGE,
           where PACKAGE is the application's package name.
    -->
    <permission
        android:name="com.botduo.nearbyatm.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.botduo.nearbyatm.permission.C2D_MESSAGE" />

    <!-- This app has permission to register and receive data message. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- GCM을 사용하기 위한 코드 끝 -->
    
    <!--  Google Map을 위한 권한 -->
    <uses-permission android:name="com.botduo.nearbyatm.permission.MAPS_RECEIVE"/>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

	<uses-permission android:name="android.permission.ACCESS_GPS" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION" />
	
	<uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.botduo.nearbyatm.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="FilteringActivity"
            android:screenOrientation="portrait"
            android:label="@string/filter">
        </activity>
        <activity 
            android:name=".DevInfoActivity"
            android:label="@string/devinfo">
        </activity>
        <activity 
            android:name=".FAQActivity"
            android:label="@string/faq">
        </activity>
        <activity 
            android:name=".NoticeActivity"
            android:label="@string/notice">
        </activity>
        <activity
            android:name="AugmentedActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity 
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            >
        </activity>
        
        <!-- Release Key -->
        <!--meta-data
		    android:name="com.google.android.maps.v2.API_KEY"
		    android:value="AIzaSyD_W1Ovpz1xKIrZ-6-6sJuI3EchkLR9anw"/-->
        
        <!-- Debug Key -->
        <meta-data
		    android:name="com.google.android.maps.v2.API_KEY"
		    android:value="AIzaSyBA94vpgV5sobtFoYjo8mJw47SGZ6xb29g"/>
        
        <!-- gcm 리시버 -->
        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>

                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.botduo.nearbyatm" />
            </intent-filter>
        </receiver>

        <service android:name="com.botduo.nearbyatm.GCMIntentService" />

        
    </application>

</manifest>
