extends menu_layout

block content
    script(type='text/javascript')
        function addRow(tableid,date,msg,user){
            var table = document.getElementById(tableid);
            var rowlen = table.rows.length;
            var row = table.insertRow(rowlen);
            row.insertCell(0).innerHTML = date;
            row.insertCell(1).innerHTML = msg;
            row.insertCell(2).innerHTML = user;

        }
        function generate(count){
            var i;
            var dateArray = new Array(#{dateArray});
            var msgArray = new Array(#{msgArray});
            var useridArray = new Array(#{useridArray});
            for(i=0; i<count; i++){
                 addRow('table',dateArray[i],msgArray[i],useridArray[i]);
            }
        }

    br
