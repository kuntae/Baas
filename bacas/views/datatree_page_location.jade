extends menu_layout

block content
    script(type='text/javascript')
        function addRow(tableid,id,mail,device){
            var table = document.getElementById(tableid);
            var rowlen = table.rows.length;
            var row = table.insertRow(rowlen);
            row.insertCell(0).innerHTML = id;
            row.insertCell(1).innerHTML = mail;
            row.insertCell(2).innerHTML = device;

        }
        function generate(count){
            var i;
            var latArray = new Array(#{latArray});
            var lngArray = new Array(#{lngArray});
            var addressArray = new Array(#{addressArray});
            for(i=0; i<count; i++){
                 addRow('table',latArray[i],lngArray[i],addressArray[i]);
            }
        }

    h1= title
    ul(id='sub',class='sf-menu')
        li
            a(href='/web/datatree/user') User Collection
        li
            a(href='/web/datatree/location') Location Collection
        li
            a(href='/web/datatree/rank') Rank Conllection
        li
            a(href='/web/datatree/push') Push Collection

    table(id='table')
        tr
            th latitude
            th longitude
            th Address
    script
        generate('#{countValue}');